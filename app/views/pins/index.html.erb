<p id="notice"><%= notice %></p>
<div class="row">
  <div class="medium-12 columns">
    <h3 class="h3">Listing Pins</h1>

      <table>
        <thead>
          <tr>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pins.each do |pin| %>
            <tr>
              <td><%= pin.description %></td>
              <td><%= link_to 'Show', pin_path(pin), class:"button" %></td>
              <td><%= link_to 'Edit', edit_pin_path(pin), class:"button secondary" %></td>
              <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class:"button alert" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Pin', new_pin_path %>

  </div><!-- END of .XXXXX-6 columns --> 
</div><!-- END of .row --> 